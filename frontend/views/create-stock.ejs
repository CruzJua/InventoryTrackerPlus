<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Create Stock</title>
        <link rel = "stylesheet" href= "/css/site.css"/>
    </head>
    <body>
        <%- include("partials/header.ejs") %>
        <section>
            <h2>Create Stock</h2>
            <section>
                <form action="/create-stock" method="POST" enctype="multipart/form-data">
                    <label for="stock_name">Name:</label>
                    <input id="stock_name" name="stock_name" required>
                    <label for="quantity">Quantity:</label>
                    <input type="number" id="quantity" name="quantity" required>
                    <label for="min_to_restock">Minimum to Restock:</label>
                    <input type="number" id="min_to_restock" name="min_to_restock" required>
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" rows="3" cols="22" required></textarea>
                    <label for="image">Image:</label>
                    <input type="file" id="image" name="image" accept="image/*">
                    <button type="submit">Create Stock</button>
                </form>
            </section>
        </section>
        <%-include("partials/footer.ejs")%>
    </body>
</html>